<Window x:Class="QuizTime.Views.StartQuiz"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuizTime.Views"
        mc:Ignorable="d"
        Title="StartQuiz" Height="450" Width="800">
    <Grid>
        <Label Content="Question 1 out of 10" Name="questionAmount" HorizontalAlignment="Right" Margin="0,11,25,0" VerticalAlignment="Top" Height="26" Width="119"/>
        <Label Content="[Quizname]" HorizontalContentAlignment="Left" x:Name="questionText" HorizontalAlignment="Left" Margin="10,11,0,0" VerticalAlignment="Top" Height="26" Width="184" FontWeight="Bold"/>
        <Frame x:Name="pageFrame" NavigationUIVisibility="Hidden" Margin="10,42,10,10"/>
        <Image Name="imgQuiz" HorizontalAlignment="Left" Height="40" Margin="104,6,0,0" VerticalAlignment="Top" Width="48"/>

        <Button Content="Previous" Click="Previous_Click" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20" />
        <Button Content="Next" Click="Next_Click" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="20" />
        <Label Name="lblTimer" Content="[Timer]" HorizontalAlignment="Left" Height="31" Margin="539,11,0,0" VerticalAlignment="Top" Width="70"/>
    </Grid>
</Window>
