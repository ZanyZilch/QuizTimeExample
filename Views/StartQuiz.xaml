<Window x:Class="QuizTime.Views.StartQuiz"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuizTime.Views"
        mc:Ignorable="d"
        Title="StartQuiz" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*" />
            <RowDefinition Height="28*" />
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Content="Question 1 out of 10" Name="questionAmount" HorizontalAlignment="Left" Margin="656,0,0,0" VerticalAlignment="Center" Height="26" Width="119"/>
        <Label Grid.Row="0" Content="[Quizname]" HorizontalContentAlignment="Left" x:Name="questionText" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center" Height="26" Width="184" FontWeight="Bold"/>
        <Frame Grid.Row="1" x:Name="pageFrame" NavigationUIVisibility="Hidden" Margin="10,30,10,12"/>
        <Image Grid.Row="0" Name="imgQuiz" HorizontalAlignment="Left" Height="40" Margin="170,0,0,0" VerticalAlignment="Center" Width="48"/>
        <Label Grid.Row="0" Name="lblTimer" Content="[Timer]" HorizontalAlignment="Center" Height="31" VerticalAlignment="Center" Width="70"/>
    </Grid>
</Window>
